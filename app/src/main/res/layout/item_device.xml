<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">  <!-- добавлено -->

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#0FDE23"
        android:text="email@example.com"
        android:textSize="16sp" />

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать"
        android:focusable="false"
        android:textColor="#0FDE23"
        android:focusableInTouchMode="false" /> <!-- добавлено -->

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:focusable="false"
        android:focusableInTouchMode="false" /> <!-- добавлено -->

    <ImageButton
        android:id="@+id/deleteDeviceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Удалить устройство"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"
        android:visibility="gone"/>

</LinearLayout>
